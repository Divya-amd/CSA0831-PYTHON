import math
def area_of_circle(radius):
    return math.pi * radius ** 2
def area_of_rectangle(length, width):
    return length * width
def area_of_triangle(base, height):
    return 0.5 * base * height
def area_of_square(side):
    return side ** 2
radius = 5
length = 10
width = 4
base = 8
height = 6
side = 7
print(f"The area of the circle with radius {radius} is {area_of_circle(radius)}")
print(f"The area of the rectangle with length {length} and width {width} is {area_of_rectangle(length, width)}")
print(f"The area of the triangle with base {base} and height {height} is {area_of_triangle(base, height)}")
print(f"The area of the square with side {side} is {area_of_square(side)}")
